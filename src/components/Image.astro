---
type Props = {
  src: string;
  alt: string;
  class: string;
};

const { src, alt, class: className }: Props = Astro.props;
const uniqueId = `image-${Math.random().toString(36)}`;
---

<div class="relative">
  <img
    src={src}
    alt={alt}
    class={className}
    id={uniqueId}
    style="cursor: pointer;"
  />

  <!-- Fullscreen popup overlay -->
  <div
    id={`popup-${uniqueId}`}
    class="image-popup-overlay"
    style="display: none;"
  >
    <img src={src} alt={alt} class="object-contain w-[95%] h-[95%]" />
  </div>
</div>

<style>
  .image-popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.9);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(5px);
  }
</style>

<script define:vars={{ uniqueId }}>
  (function () {
    const img = document.getElementById(uniqueId);
    const popup = document.getElementById(`popup-${uniqueId}`);

    // Open popup on image click
    img.addEventListener("click", function () {
      popup.style.display = "flex";
      // Prevent background scrolling
      document.body.style.overflow = "hidden";
    });

    // Close popup on overlay click (clicking outside the image)
    popup.addEventListener("click", function (e) {
      popup.style.display = "none";
      document.body.style.overflow = "";
    });

    // Close popup on ESC key press
    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape" && popup.style.display === "flex") {
        popup.style.display = "none";
        document.body.style.overflow = "";
      }
    });
  })();
</script>
