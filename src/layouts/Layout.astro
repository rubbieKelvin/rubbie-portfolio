---
import "@/assets/global.css";
import AppHeader from "@/components/AppHeader.astro";
import { sanityClient } from "sanity:client";
import type { SanityDocument } from "@sanity/client";

const LINKS_QUERY = `
*[_type == "link" && featured_contact_link == true] {
  _id,
  title,
  slug,
  url
}
`;

const contactLinks = await sanityClient.fetch<SanityDocument[]>(LINKS_QUERY);

type Props = {
  title?: string;
  description?: string;
  image?: string;
  article?: {
    publishedAt: string;
  };
};

const { title, description, image, article } = Astro.props;

const pageTitle = title ? `${title} | Rubbie Kelvin` : "Rubbie Kelvin";
const imageUrl = image ? image : "/rto.png";

const navigationLinks = [
  {
    title: "~",
    url: "/",
  },

  {
    title: "Projects",
    url: "/projects",
  },

  {
    title: "Blog",
    url: "/blog",
  },

  {
    title: "WDYPLP?",
    url: "/why-does-your-portfolio-look-plain",
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Google+Sans+Code:ital,wght@0,300..800;1,300..800&family=Mozilla+Text:wght@200..700&display=swap"
      rel="stylesheet"
    />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Rubbie Kelvin" />
    <meta
      name="keywords"
      content="Rubbie Kelvin, Software Developer, Python Developer, JavaScript Developer, TypeScript Developer, Rust Developer, Nigerian Developer, Full Stack Developer, Portfolio"
    />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    {
      article ? (
        <meta property="og:type" content="article" />
      ) : (
        <meta property="og:type" content="website" />
      )
    }
    <meta property="og:url" content={Astro.url.toString()} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:image:alt" content={pageTitle} />
    <meta property="og:image:width" content="1042" />
    {
      article && (
        <meta property="article:author" content="Rubbie Kelvin" />
        <meta
          property="article:published_time"
          content={article.publishedAt}
        />
      )
    }
  </head>

  <body class="h-full flex flex-col max-h-full">
    <!-- Header -->
    <div class="flex-row flex">
      <div class="flex-[20%] hidden lg:block"></div>
      <AppHeader className="flex-[60%] px-5 lg:px-0" />
      <div class="flex-[20%] hidden lg:block"></div>
    </div>
    <!-- Main Content -->
    <div
      class="flex-grow flex h-0 overflow-y-auto flex-col lg:flex-row-reverse"
    >
      <!-- Navigation Links -->
      <div
        class="lg:flex-[20%] flex lg:flex-col gap-4 items-center justify-around lg:justify-center sticky top-0 px-5 py-2 lg:p-0 z-10 bg-bg"
      >
        {
          navigationLinks.map((link, index) => (
            <div class="lg:w-1/2">
              <a class="cursor-underline-effect" href={link.url}>
                <span class="hidden lg:inline">0{index + 1}.</span>
                <span>{link.title}</span>
              </a>
            </div>
          ))
        }
      </div>
      <div class="lg:flex-[60%] flex-grow">
        <slot />
      </div>
      <!-- Contact Links -->
      <div
        class="lg:flex-[20%] flex lg:flex-col gap-4 items-center justify-center lg:sticky top-0 px-5 py-2 lg:p-0"
      >
        {
          contactLinks.map((link) => (
            <div class="w-1/2">
              <a class="cursor-underline-effect" href={link.url}>
                <span>{link.title}</span>
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </body>
</html>
